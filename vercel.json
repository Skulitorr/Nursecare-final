{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/", "destination": "/public/login.html" },
    { "source": "/login", "destination": "/public/login.html" },
    { "source": "/dashboard", "destination": "/public/dashboard.html" },
    { "source": "/reports", "destination": "/public/reports.html" },
    { "source": "/inventory", "destination": "/public/inventory.html" },
    { "source": "/patients", "destination": "/public/patients.html" },
    { "source": "/staff", "destination": "/public/staff.html" },
    { "source": "/settings", "destination": "/public/settings.html" },
    { "source": "/unauthorized", "destination": "/public/unauthorized.html" },
    { "source": "/404", "destination": "/public/404.html" },
    { "source": "/scripts/:path*", "destination": "/public/scripts/:path*" },
    { "source": "/styles/:path*", "destination": "/public/styles/:path*" },
    { "source": "/assets/:path*", "destination": "/public/assets/:path*" }
  ]
}